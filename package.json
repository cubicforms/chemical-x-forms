    "@nuxt/schema": "^3.15.3",
    "@nuxt/test-utils": "^3.15.4",
    "@types/node": "latest",
    "changelogen": "^0.5.7",
    "eslint": "^9.19.0",
    "nuxt": "^3.15.3",
