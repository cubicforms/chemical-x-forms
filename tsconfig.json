{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "skipLibCheck": false,
    "baseUrl": ".",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "playground",
    ".nuxt"
  ]
}