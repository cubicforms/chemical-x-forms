{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "skipLibCheck": false,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#app": [
        "./types/app.d.ts"
      ]
    },
    "types": [
      "vue"
    ]
  },
  "include": [
    "src",
    "types",
    "process-dist.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "playground",
    ".nuxt"
  ]
}